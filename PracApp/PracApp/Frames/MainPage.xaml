<Page x:Class="PracApp.Frames.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracApp.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="Gray">
            <StackPanel x:Name="FuncPanel">
                <Button Content="_-_" Foreground="White" Style="{StaticResource MaterialDesignFlatButton}"></Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"></Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"></Button>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Column="1">
            <Frame x:Name="NavFrame" NavigationUIVisibility="Hidden">
                
            </Frame>
        </Grid>
        
    </Grid>
</Page>
